<h1>Faça seu Login</h1>

@if(TempData != null)
            {
                <div class="alert alert-danger">
                    @TempData["erro"]
                </div>
            }

<form action="/Login/Login" method="post">
    
    <label>Usuario</label>
    <input type="text" name="login"/>
    <br />
    <label>Senha</label>
    <input type="password" name="senha"/>
    <br />

    <button class="btn btn-primary" type="submit">Entrar</button>

</form>
